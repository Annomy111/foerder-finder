# Database Configuration
ORACLE_USER=ADMIN
ORACLE_PASSWORD=your_password_here
ORACLE_DSN=your_db_host:1522/your_service_name
ORACLE_WALLET_PATH=/path/to/wallet

# OCI Configuration
OCI_CONFIG_PATH=~/.oci/config
OCI_COMPARTMENT_ID=ocid1.compartment.oc1..xxx

# OCI Vault Secret IDs
SECRET_DEEPSEEK_API_KEY=ocid1.vaultsecret.oc1..xxx
SECRET_JWT_SECRET=ocid1.vaultsecret.oc1..xxx

# DeepSeek API (for AI draft generation)
# Get your API key from: https://platform.deepseek.com/
# Cost: ~$0.14 per 1M tokens (very affordable compared to OpenAI)
# If not set, system will gracefully fallback to mock drafts
DEEPSEEK_API_KEY=sk-your-deepseek-api-key-here
DEEPSEEK_API_URL=https://api.deepseek.com/v1/chat/completions
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_MAX_TOKENS=4096
DEEPSEEK_TEMPERATURE=0.7

# ChromaDB Configuration
CHROMA_DB_PATH=/opt/chroma_db
CHROMA_COLLECTION_NAME=funding_docs

# IMPORTANT: ChromaDB requires SQLite 3.35+
# If your system has an older SQLite version, install pysqlite3-binary:
# pip install pysqlite3-binary
# The code will automatically use it if available.

# Embedding Model
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2

# RAG Configuration
USE_ADVANCED_RAG=true
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_TOP_K_RESULTS=5

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS=["https://app.foerder-finder.de"]

# Firecrawl Configuration (Self-Hosted)
FIRECRAWL_API_URL=http://130.61.137.77:3002
FIRECRAWL_API_KEY=self-hosted

# Legacy Scraping Configuration (Removed - Using Firecrawl)
# SCRAPER_USER_AGENT=Mozilla/5.0 (compatible; FoerderFinderBot/1.0)
# SCRAPER_DELAY=2.0
# SCRAPER_CONCURRENT_REQUESTS=8

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
